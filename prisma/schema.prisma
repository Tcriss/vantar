generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid()) @db.Uuid
  name           String    @db.VarChar(30)
  email          String    @unique @db.Char(100)
  password       String    @db.VarChar(130)
  inventories    Inventory[]
  products       Product[]
}

model Product {
  id             String    @id @default(uuid()) @db.Uuid
  name           String    @db.VarChar(30)
  amount         Int       @db.Integer @default(0)
  price          Int       @db.Integer
  unit_measure   String    @db.VarChar(100)
  category       Category  @relation(fields: [category_name], references: [name])
  category_name  String
  expiration     DateTime
  user           User      @relation(fields: [userId], references: [id])
  userId         String    @db.Uuid
}

model Category {
  id             String    @id @default(uuid()) @db.Uuid
  name           String    @unique @db.VarChar(30)
  description    String    @db.VarChar(130)
  products       Product[]
}

model Inventory {
  id             String    @id @default(uuid()) @db.Uuid
  product_id     String
  date           DateTime
  amount         Int       @db.Integer @default(0)
  user           User      @relation(fields: [user_id], references: [id])
  user_id        String    @db.Uuid
}
